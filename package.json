{
  "name": "bitwatcher",
  "description": "Bitcoin Exchange watcher dashboard.",
  "version": "0.0.1",
  "license": "BSD-3",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelryancaputo/bitwatcher.git"
  },
  "homepage": "https://github.com/michaelryancaputo/bitwatcher",
  "keywords": [
    "react",
    "isomorphic",
    "starter",
    "boilerplate",
    "template",
    "webpack",
    "hapi"
  ],
  "main": "dist/index",
  "scripts": {
    "start": "eval 'supervisor dist/server >tmp/supervisor.log 2>&1 & SUPERVISOR_PID=$!';     sleep 1;      open http://localhost:8000;       tail -f tmp/*.log;     kill $SUPERVISOR_PID;",
    "build": "eval 'webpack -cv --display-error-details --config webpack.server.js &';   webpack -cv --display-error-details --config webpack.client.js;",
    "watch-server": "webpack -wcv --display-error-details --config webpack.server-watch.js",
    "watch-client": "webpack -cv --display-error-details --config webpack.client-watch.js && webpack-dev-server --config webpack.client-watch.js",
    "watch": "eval 'npm run watch-server >tmp/server.log 2>&1 & SERVER_PID=$!';      eval 'npm run watch-client >tmp/client.log 2>&1 & CLIENT_PID=$!';     sleep 5;    npm run start;     kill $CLIENT_PID $SERVER_PID;"
  },
  "dependencies": {
    "async": "^0.9.0",
    "hapi": "^8.2.0",
    "jquery": "^2.1.3",
    "react": "^0.12.2",
    "react-bootstrap": "^0.16.1",
    "react-loader": "^1.2.0",
    "react-router": "^0.12.4",
    "superagent": "^0.21.0",
    "underscore": "^1.8.2",
    "xchange.js": "^0.1.4"
  },
  "devDependencies": {
    "babel-core": "4.7.1",
    "babel-loader": "4.1.0",
    "json-loader": "0.5.1",
    "react-hot-loader": "1.1.7",
    "webpack": "1.7.2",
    "webpack-dev-server": "1.7.0"
  }
}
